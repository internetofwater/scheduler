# This file represents the prefix for the gleaner config file

---
minio:
  address: {{ GLEANERIO_MINIO_ADDRESS }}
  port: {{ GLEANERIO_MINIO_PORT }}
  accessKey: {{ MINIO_ACCESS_KEY }}
  secretKey: {{ MINIO_SECRET_KEY }}
  ssl: {{ GLEANERIO_MINIO_USE_SSL }}
  bucket: {{ GLEANERIO_MINIO_BUCKET }}
  region: {{ GLEANERIO_MINIO_REGION }}
gleaner:
  runid: {{ GLEANERIO_MINIO_BUCKET }} # this will be the bucket the output is placed in...
  summon: true # do we want to visit the web sites and pull down the files
  mill: false
context:
  cache: true
  strict: true  
contextmaps:
  - prefix: "https://schema.org/"
    file: "/assets/schemaorg-current-http.jsonld"  # wget https://schema.org/docs/jsonldcontext.jsonld
summoner:
  after: ""      # "21 May 20 10:00 UTC"   
  mode: full  # full || diff:  If diff compare what we have currently in gleaner to sitemap, get only new, delete missing
  threads: 5
  delay:  # milliseconds (1000 = 1 second) to delay between calls (will FORCE threads to 1) 
  headless: {{ GLEANERIO_HEADLESS_ENDPOINT }}  # URL for headless see docs/headless
millers:
  graph: true
